{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "es2015",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "declaration": true,
    "outDir": "./build/",
    "rootDir": "./src/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2015",
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./src/lib",
    "paths": {
      "plotly.js": [
        "./node_modules/plotly.js/lib/index.js",
        "./node_modules/plotly.js/lib/scatter.js"
      ]
    },
    // Strict type-checking options
    "strict": true,
    "noImplicitAny": true
  },
  "parcelTsPluginOptions": {
    // If true type-checking is disabled
    "transpileOnly": false
  },
  "include": ["./src/**/*"],
  "exclude": [".git", "node_modules", "typings"]
}
