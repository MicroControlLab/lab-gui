{
  "name": "lab-gui",
  "version": "1.0.3",
  "description": "UI Framework for controlling a lab via a web interface",
  "keywords": [
    "react",
    "Ui",
    "typescript"
  ],
  "main": "dist/lab-gui.js",
  "module": "dist/lab-gui.es5.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "Sebastian Weigand <s.weigand.phy@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/MicroControlLab/lab-gui.git"
  },
  "bugs": {
    "url": "https://github.com/MicroControlLab/lab-gui/issues"
  },
  "homepage": "https://github.com/MicroControlLab/lab-gui",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "lint": "tslint -t codeFrame -c tslint.json 'src/**/*.{ts,tsx,js}' 'tests/**/*.{ts,tsx,js}'",
    "prebuild": "rimraf dist && rimraf build",
    "build": "tsc --module commonjs && rollup -c rollup.config.ts && typedoc --out docs src",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "demo": "parcel demos/demo.html"
  },
  "lint-staged": {
    "{src,test}/**/*.{ts,tsx,js}": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "jsdom",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "collectCoverageFrom": [
      "src/*.{js,ts,tsx}"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^12.12.22",
    "@types/parcel-env": "0.0.1",
    "@types/plotly.js": "^1.38.12",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-plotly.js": "^2.2.2",
    "@types/react-redux": "^7.0.0",
    "@types/redux-logger": "^3.0.6",
    "colors": "^1.3.2",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.1",
    "cz-conventional-changelog": "^3.0.0",
    "husky": "^7.0.0",
    "i": "^0.3.6",
    "jest": "^27.3.1",
    "jest-config": "^27.0.3",
    "lint-staged": "^11.0.0",
    "lodash.camelcase": "^4.3.0",
    "npm": "^8.1.2",
    "parcel": "^2.0.0",
    "prettier": "^2.0.1",
    "prompt": "^1.0.0",
    "replace-in-file": "^6.0.0",
    "rimraf": "^3.0.0",
    "rollup": "^2.6.1",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-sourcemaps": "^0.6.0",
    "rollup-plugin-typescript2": "^0.31.1",
    "semantic-release": "^18.0.0",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.0.0",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^9.0.0",
    "tslint-react": "^5.0.0",
    "typedoc": "^0.22.7",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@material-ui/core": "4.12.3",
    "@material-ui/icons": "4.11.2",
    "plotly.js": "^2.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-plotly.js": "^2.4.0",
    "react-redux": "^7.1.3",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.5",
    "redux-logger": "^3.0.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
